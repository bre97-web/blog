<md-icon-button id="navigation-drawer-toggle-button">
    <md-icon>menu</md-icon>
</md-icon-button>

<script>
import type { MdIconButton } from "@material/web/all"
import { navigationConfiguration } from "../../stores/navigationStore"


const navigationDrawerToggleButtonRef = document.querySelector('#navigation-drawer-toggle-button') as MdIconButton

navigationDrawerToggleButtonRef?.addEventListener('click', () => {
    navigationConfiguration.setKey('isOpen', !navigationConfiguration.get().isOpen)
})

</script>