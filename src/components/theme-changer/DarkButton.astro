<md-icon-button id="dark-button" aria-label="Swicth theme">
    <md-icon class="icon">dark_mode</md-icon>
</md-icon-button>

<script>
    import type { MdIcon, MdIconButton } from "@material/web/all";
    import { themeConfiguration } from "../../stores/themeStore";

    const darkButtonRef = document.querySelector(
        "#dark-button",
    ) as MdIconButton;
    const darkButtonIconRef = darkButtonRef.querySelector(".icon") as MdIcon;

    darkButtonRef.addEventListener("click", () => {
        themeConfiguration.set({
            ...themeConfiguration.get(),
            isDark: !themeConfiguration.get().isDark,
        });
        darkButtonIconRef.textContent = themeConfiguration.get().isDark
            ? "light_mode"
            : "dark_mode";
    });

    darkButtonIconRef.textContent = themeConfiguration.get().isDark
        ? "light_mode"
        : "dark_mode";
</script>
