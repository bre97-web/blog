---
interface Props {
    title?: string;
}

const { title = `Bre97's Blog` } = Astro.props;
---

<header class="header">
    <div class="flex items-center">
        <slot name="start" />
        <h1 class="text-title-medium text-on-surface pl-2">{title}</h1>
    </div>
    <div class="actions">
        <slot name="actions" />
    </div>
</header>

<style>
    .header {
        --var-header-padding-left: var(--header-padding-left, 12px);
        --var-header-padding-right: var(--header-padding-right, 12px);
        --var-header-width: var(--header-width, 100%);

        height: 64px;
        width: var(--var-header-width);
        margin: auto;
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding-left: var(--var-header-padding-left);
        padding-right: var(--var-header-padding-right);
    }
    .actions {
        display: flex;
        gap: 4px;
    }
</style>

