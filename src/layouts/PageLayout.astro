---
import BaseHead from "../core/head/components/BaseHead.astro";
---

<!doctype html>
<html lang="en">
    <head>
        <BaseHead/>
    </head>
    <body>
        <div
            class="grid grid-cols-1 container-grid relative surface-container-highest z-0"
        >
            <span class="z-[1] sticky top-0">
                <slot name="header" />
            </span>

            <div
                id="content-container"
                class="col-span-full grid container-main-grid z-[0] items-start"
            >
                <div class="z-[0] h-[calc(100vh-56px)] sticky top-[56px]">
                    <slot name="navigation-drawer" />
                </div>
                <div
                    id="content"
                    class="-z-[1] min-h-[calc(100vh-56px)] rounded-[28px] mx-2 relative overflow-clip surface transition-all motion-easing-emphasized-decelerate motion-duration-emphasized-decelerate"
                >
                    <slot name="content" />
                </div>
            </div>

            <div class="-z-[1]">
                <slot name="footer" />
            </div>
        </div>

        <style>
            .container-grid {
                grid-template-columns: 1fr;
                grid-template-rows: auto auto auto;
            }
            .container-main-grid {
                grid-template-columns: auto 1fr;
                grid-template-rows: auto 1fr;
            }
        </style>
    </body>
</html>
